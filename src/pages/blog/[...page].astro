---
import { getBlogPagination, tags, toSlug } from "../../utils/post.js";
import type { Page } from "astro";
import Layout from "../../layouts/Layout.astro";
import BlogPost from "../../components/BlogPost.astro";
import Pagination from "../../utils/widgets/Pagination.astro";
import SearchBar from "../../components/SearchBar.astro";

export const prerender = true;

export async function getStaticPaths({ paginate }) {
  return getBlogPagination(paginate);
}

const { page } = Astro.props as { page: Page<any> };
---

<Layout pageTitle="Blog">
  <SearchBar />
  <div class="tags-container">
    <div class="tagscon">
      {
        tags.map((tags) => (
          <p class="tags">
            <a href={`/blog/tags/${toSlug(tags)}`}>
              <button>{tags}</button>
            </a>
          </p>
        ))
      }
    </div>
    <SearchBar
      id="search-mobile"
      data-astro-transition-persist="#search-mobile"
    />
    <button class="close-search">âœ–</button>
  </div>

  <div class="grid-container">
    {
      page.data.map((post) => (
        <BlogPost
          url={`/blog/posts/${post.id}/`}
          title={post.data.title}
          image={post.data.image.url}
          description={post.data.description}
          pubDate={post.data.pubDate}
        />
      ))
    }
  </div>

  <Pagination page={page} />
</Layout>

<style lang="scss" is:global>
  .tags-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    white-space: wrap;

    & > .tagscon {
      display: flex;
      align-items: center;
      width: 90%;
      overflow-x: auto;
      flex-wrap: wrap;
      scroll-behavior: smooth;
      &::-webkit-scrollbar {
        display: none;
      }
      white-space: nowrap;
      & > .tags a button {
        color: var(--text);
      }
    }

    p.tags {
      margin: 0.25rem;
      padding: 0.65rem;
      overflow: visible;
      width: auto;
      border: var(--bor2);
      border-radius: var(--br);
      flex-wrap: nowrap;
      transition: var(--trns);
      &:hover {
        scale: 1.06;
        transition: var(--trns);
      }
    }
  }
  @container body (max-width: 768px) {
    .tags-container > .tagscon {
      flex-wrap: nowrap;
    }
  }
  @container body (min-width: 480px) {
    #search-mobile,
    .close-search {
      display: none !important;
    }
    .tagscon {
      width: 100% !important;
    }
  }
  @container body (max-width: 480px) {
    #search-desktop {
      display: none !important;
    }
  }
</style>
